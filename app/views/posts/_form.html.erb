<div class="container-fluid post_new">
  <%= form_for(@post) do |form| %>
    <% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row" style="margin-left: 30px;">
      <%= form.label :title, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= form.text_field :title, class:"form-control" %>
      </div>
    </div>

    <div class="form-group row" style="margin-left: 30px;" >
      <%= form.label :content, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= form.text_area :content, class:"form-control" %>
      </div>
    </div>

    <div class="form-group row" style="margin-left: 30px;" >
      <%= form.label :image, class:"col-sm-2 col-form-label"%>
      <div class="col-sm-8">
        <label class="">
            <%= form.file_field :image %>
        </label>
      </div>
    </div>

    <div class="actions" style="margin-left: 40px; padding-bottom: 50px;margin-top: 50px;">
      <%= form.submit "Сохранить",  class:"btn btn-outline-dark" %>
      <%= link_to 'Назад', posts_path , class:"btn btn-outline-dark" , style:"margin-left: 10px;"%>
    </div>
  <% end %>
</div>