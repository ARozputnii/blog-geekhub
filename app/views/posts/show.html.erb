<div class="card mb-3, show">
  <% if @post.image.attached? %>
	<!-- @post.image.present? will always return true, use attached? to check presence -->
	    <%= image_tag @post.image ,alt: 'pic', style:"height: 500px",  class: "mx-auto d-block"%>
	<% end %>
  <div class="card-body">
    <h5 class="card-title"> <%= @post.title %> </h5>
    <p class="card-text"> <%= @post.content %> </p>
      <p class="blockquote-footer">author: <%= full_name(@post) %></p>
      <p class="blockquote-footer"><%= @post.created_at.to_date.strftime("%d %B, %Y") %></p>
  </div>
</div>
<%= link_to 'Edit', edit_post_path(@post), class:"btn btn-outline-success" %>
<%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-outline-success" %>


<%= render @post.comments %>
<%= render 'comments/form' %>
