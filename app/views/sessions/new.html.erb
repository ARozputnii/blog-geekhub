
<h1>Login</h1>
<%= form_tag sessions_path do |form| %>
  <div class='form-group row'>
    <%= label_tag :email , "Email", :class =>"col-sm-2 col-form-label"%>
    <%= text_field_tag :email , nil, :class => "col-sm-4 form-control" %>
  </div>
  <div class='form-group row'>
    <%= label_tag :password, "Password", :class =>"col-sm-2 col-form-label" %>
    <%= password_field_tag :password , nil, :class => "col-sm-4 form-control" %>
  </div>
  <br><br>
  <div class="actions" style="btn btn-outline-success">
    <%= submit_tag 'Login', :class => "btn btn-outline-success" %>
    <%= link_to 'Back', posts_path , class:"btn btn-outline-success" , style:"margin-left: 10px;"%>
  </div>
<% end %>