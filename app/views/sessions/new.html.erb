<div style="margin: 5%">
  <%= form_tag sessions_path do  %>
    <div class='form-group row'>
      <%= label_tag :email , "Введите Ваш Email", :class =>"col-sm-2 col-form-label"%>
      <%= text_field_tag :email , nil, :class => "col-sm-4 form-control" %>
    </div>
    <div class='form-group row'>
      <%= label_tag :password, "Введите Ваш пароль", :class =>"col-sm-2 col-form-label" %>
      <%= password_field_tag :password , nil, :class => "col-sm-4 form-control" %>
    </div>
    <%= link_to "Забыли пароль?", new_password_reset_path  %>
    <br><br>
    <div class="actions" style="btn btn-outline-success">
      <%= submit_tag 'Ввойти', :class => "btn btn-outline-dark" %>
      <%= link_to 'Назад', posts_path , class:"btn btn-outline-dark" , style:"margin-left: 10px;"%>
    </div>
  <% end %>
</div>