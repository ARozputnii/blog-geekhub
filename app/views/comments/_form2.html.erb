<h4>Edit comment:</h4>

<%= form_for([@post, @comment]) do |f| %>

  <div class="form-group row">
    <%= f.label :body,"Add comment", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, class:"form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit  class:"btn btn-outline-success" %>

  <%= link_to 'Back', @post, class:'btn btn-outline-success'  %>
  </div>
<% end %>