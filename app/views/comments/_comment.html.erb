
  <div class="card_comments">
    <div class="card-header">
      <% if updated(comment) %>
        <p style="color:red; font-size: 14px">edited at <%= l comment.created_at, format: "%e %B " "%H:%M:%S" %></p>
      <% end  %>
      <div class="row">
        <div class="col">
          <span data-toggle="tooltip" data-placement="top" title="(<%= l comment.created_at, format: "%e %B " "%H:%M:%S" %>)">
            <%= comment.author.full_name %>
          </span>
        </div>
        <div class="col">
          <%= link_to post_comment_votes_path(@post, comment),method: :post, class: "icon_vote" do %>
          <%= fa_icon "thumbs-up" %>
          <% end %>
          <!--No route matches [DELETE] "/posts/1/comments/1/votes"
          <%#= link_to post_comment_votes_path(@post, comment), method: :delete, class: "icon_vote" do %>
            <%#= fa_icon "thumbs-down" %>
          <%# end %>-->
          <%= link_to post_comment_votes_path(@post, comment),method: :post, class: "icon_vote" do %>
            <%= fa_icon "thumbs-down" %>
          <% end %>
          Likes: <%= comment.votes.count || 0 %>
          <!--Vote.all.count-->
        </div>

      </div>

    </div>
    <div class="card-body">
      <% if current_user %>
          <p class="card-text"><%= comment.body %>
            <br><br>
            <%= link_to 'Reply',  new_post_comment_path(comment.post, parent_id: comment.id), class:'btn btn-outline-success' %>
            <% if (@current_user.id == comment.author_id && Time.now - comment.created_at < 3600) %>
            <%= link_to 'Edit',  edit_post_comment_path(@post, comment), class:'btn btn-outline-success' %>
            <%= link_to 'Destroy Comment', [comment.post, comment],
                method: :delete,
                data: { confirm: 'Are you sure?' }, class:"btn btn-outline-success"%>
        <% end %>
      <% end  %>
    </div>
  </div>
