
  <div class="card">
    <div class="card-header">
      <% if updated(comment) %>
        <p style="color:red; font-size: 14px">edited at <%= l comment.created_at, format: "%e %B " "%H:%M:%S" %></p>
      <% end  %>
      <span data-toggle="tooltip" data-placement="top" title="(<%= l comment.created_at, format: "%e %B " "%H:%M:%S" %>)">
        <%= comment.author.full_name %>
            </span>
    </div>
    <div class="card-body">
      <% if current_user %>
          <p class="card-text"><%= comment.body %>
          <% if (@current_user.id == comment.post.author_id && Time.now - comment.created_at < 3600) %>
            <br><br>
            <%= link_to 'Edit',  edit_post_comment_path(@post, comment), class:'btn btn-outline-success' %>
            <%= link_to 'Destroy Comment', [comment.post, comment],
                method: :delete,
                data: { confirm: 'Are you sure?' }, class:"btn btn-outline-success"%>
        <% end %>
      <% end  %>
    </div>
  </div>
