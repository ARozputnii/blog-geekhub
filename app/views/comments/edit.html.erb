
<h3 style="margin-top: 5%; text-align: center; text-transform: uppercase">Edit comment:</h3>

<%= form_for([@post, @comment]) do |f| %>

    <% if @comment.errors.any? %>
      <div id="error_explanation" style="color: red; text-align: center;">
        <% @comment.errors.full_messages.each do |msg| %>
          <li ><%= msg %></li>
        <% end %>
      </div>
    <% end %>
  <div class="form-group row">
    <%= f.label :body,"Add comment", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, class:"form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit  class:"btn btn-outline-success" %>
    <%= link_to 'Back', @post, class:'btn btn-outline-success'  %>
  </div>

<% end %>