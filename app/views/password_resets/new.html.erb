<div class="container-fluid">
  <%= form_tag password_resets_path, :method => :post do %>
    <div class="form-group">
      <%= label_tag :email, "Email", class:"col-form-label" %>
      <%= text_field_tag :email, params[:email], class:"col-form-control" %>
    </div>
    <div class="actions"><%= submit_tag "Збросить пароль", class:"btn btn-outline-dark" %></div>
  <% end %>
</div>