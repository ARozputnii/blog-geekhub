<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-light bg-light">
        <div>
        <%= link_to image_tag( 'https://i.ibb.co/TbQxTHy/w256h2561372501800-Sketch-Book5.png',size: "50x50"),root_path, class: "logo" %>
        <%= link_to 'Home', posts_path, class:"navbar-brand" %>
        </div>
        <ul class="nav justify-content-end">
          <% if current_user %>

            <%= link_to "#{current_user.full_name}", @author, class:"navbar-brand" %>
            <li class="nav-item">
              <%= link_to 'Log Out', logout_path, class:"navbar-brand" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign Up', signup_path, class:"navbar-brand" %>
              <%= link_to 'Log In', login_path, class:"navbar-brand" %>
            </li>
          <% end %>
        </ul>

      </nav>
        <%= yield %>
    </div>
  </body>
</html>
